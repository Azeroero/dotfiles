# Shell configs, which will be read by both, bash and zsh.

export TERM=ansi
export EDITOR=vim
export FIGNORE=".egg-info:.pyc:.pyo:.mo"
export HISTFILE=~/.history

alias ls='ls -Gh'
alias ll='ls -l'
alias la='ls -lA'
alias l='la'
alias grep='grep --color'
alias ..='cd ..'
alias e='$EDITOR'

# git
alias ga.='ga .'
alias ga='git add'
alias gb='git branch -v'
alias gba='git branch -a -v'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gcount='git shortlog -sn'
alias gcp='git cherry-pick'
alias gd='git diff'
alias gf='git fetch'
alias gl='git pull'
alias glg='git log --stat --max-count=5'
alias glo='git log'
alias glog='git log --graph'
alias glr='git pull --rebase'
alias gm='git merge'
alias gmf='git merge --ff-only'
alias gp='git push'
alias gr='git remote'
alias grs='git reset --hard'
alias gs='git status'
alias gsm='git submodule init'
alias gso='git show'
alias gsv='git svn'
alias gst='git config --add remote.origin.fetch "+refs/notes/*:refs/notes/*"'
alias gt='git notes --ref=jenkins show'
alias go='git browse'
alias gj='git jenkins'
